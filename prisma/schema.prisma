generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cita {
  id         Int      @id @default(autoincrement())
  nombre     String
  email      String
  telefono   String
  fecha      DateTime
  motivo     String
  createdAt  DateTime @default(now())

  horarioId  Int?     @unique
  horario    Horario? @relation(fields: [horarioId], references: [id])
}

model Doctor {
  id           Int       @id @default(autoincrement())
  nombre       String
  especialidad String
  descripcion  String?     // Breve descripción
  foto         String?     // URL de la foto
  cv           String?     // Texto largo tipo "acerca de mí"
  horarios     Horario[]
}


model Horario {
  id         Int      @id @default(autoincrement())
  fechaHora  DateTime
  doctor     Doctor   @relation(fields: [doctorId], references: [id])
  doctorId   Int

  cita       Cita?    @relation
}
