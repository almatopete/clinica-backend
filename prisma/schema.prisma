generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Añade estos enums
enum Role {
  PATIENT
  DOCTOR
  ADMIN
}

enum EstadoCita {
  PROGRAMADA
  CONFIRMADA
  ATENDIDA
  CANCELADA
  NO_SHOW
}

model Cita {
  id         Int         @id @default(autoincrement())
  nombre     String
  email      String
  telefono   String
  fecha      DateTime
  motivo     String
  createdAt  DateTime    @default(now())
  estado     EstadoCita  @default(PROGRAMADA)

  // Relación con Horario (dejarla opcional para liberar slot al cancelar)
  horarioId  Int?        @unique
  horario    Horario?    @relation(fields: [horarioId], references: [id])

  userId     Int?
  user       User?       @relation(fields: [userId], references: [id])

  @@index([fecha])
}

model Doctor {
  id           Int       @id @default(autoincrement())
  nombre       String
  especialidad String
  descripcion  String?
  foto         String?
  cv           String?
  horarios     Horario[]
}

model Horario {
  id         Int      @id @default(autoincrement())
  fechaHora  DateTime
  doctor     Doctor   @relation(fields: [doctorId], references: [id])
  doctorId   Int
  cita       Cita?
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  nombre    String
  role      Role     @default(PATIENT)
  createdAt DateTime @default(now())
  citas     Cita[]
}
